{
  "env": {
    "browser": true,
    "es2022": true,
    "node": true
  },
  "extends": [
    "xo",
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react/jsx-runtime",
    "plugin:@typescript-eslint/recommended"
  ],
  "globals": {
    "module": true
  },
  "overrides": [
    {
      "extends": [
        "xo-typescript"
      ],
      "files": [
        "*.ts",
        "*.tsx"
      ]
    },
    {
      "files": ["*.js"],
      "rules": {
        "@typescript-eslint/no-var-requires": "off"
      }
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "no-console": 2,
    "indent": "off"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}